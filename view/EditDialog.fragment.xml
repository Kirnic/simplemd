<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core" >
    <Dialog
        title="Редактирование"
        id="editDialogId"
        >
        <content>
            <f:SimpleForm>
                <f:content>
                    <Label text="Название категории"/>
                    <Input 
                        valueLiveUpdate="true"
                        value="{/EditTitle}"
                        id="EditCategoryName"/>
                    <Label text="Количество"/>
                    <Input
                        value="{/EditCounter}" 
                        id="EditCategoryCounter"/>
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Создать" press="onConfirmEdit"/>
        </beginButton>
        <endButton>
            <Button text="Отмена" press="onCloseEditDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>